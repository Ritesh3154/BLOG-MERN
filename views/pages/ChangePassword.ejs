<!DOCTYPE html>
<html dir="ltr" lang="en">
<%- include('../layout/HeadSection.ejs') -%>

    <body>

        <!-- Preloader - style you can find in spinners.css -->

        <div class="preloader">
            <div class="lds-ripple">
                <div class="lds-pos"></div>
                <div class="lds-pos"></div>
            </div>
        </div>

        <!-- Main wrapper - style you can find in pages.scss -->

        <div id="main-wrapper" data-layout="vertical" data-navbarbg="skin5" data-sidebartype="full"
            data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full">

            <!-- Topbar header - style you can find in pages.scss -->

            <%- include('../layout/Header.ejs')-%>

                <!-- End Topbar header -->


                <!-- Left Sidebar - style you can find in sidebar.scss  -->

                <%-include('../layout/SideBar.ejs')-%>

                    <!-- End Left Sidebar - style you can find in sidebar.scss  -->


                    <!-- Page wrapper  -->

                    <div class="page-wrapper">

                        <!-- Bread crumb and right sidebar toggle -->

                        <div class="page-breadcrumb">
                            <div class="row">
                                <div class="col-12 d-flex no-block align-items-center">
                                    <div class="ms-auto text-end">
                                        <nav aria-label="breadcrumb">
                                            <ol class="breadcrumb">
                                                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                                                <li class="breadcrumb-item active" aria-current="page">
                                                    MyProfile
                                                </li>
                                            </ol>
                                        </nav>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- End Bread crumb and right sidebar toggle -->


                        <!-- Container fluid  -->

                        <div class="container-fluid">

                            <!-- Sales Cards  -->
                            <div class="container">

                                <div class="row">
                                    <form
                                        class="form-horizontal shadow col-12 col-md-8 col-lg-6 mx-auto my-5 bg-light shadow p-3 text-center"
                                        method="post" action="/api/blogadmin/ChangePassword">
                                        <div class="card-body">
                                            <!-- Profile Heading -->
                                            <h4 class="card-title mb-4 fs-3 fw-bold">Change Password</h4>

                                            <!-- Profile Image -->


                                            <!-- Username Field -->
                                            <div class="form-group row mb-3">
                                                <label for="username"
                                                    class="col-sm-5 text-end control-label col-form-label">Current
                                                    Password:</label>
                                                <div class="col-sm-7">
                                                    <input type="text" class="form-control" name="password" value=""
                                                        placeholder="Current Password" />
                                                </div>
                                            </div>

                                            <!-- Email Field -->
                                            <div class="form-group row mb-3">
                                                <label for="email"
                                                    class="col-sm-5 text-end control-label col-form-label">New
                                                    Password:</label>
                                                <div class="col-sm-7">
                                                    <input type="text" class="form-control" name="new_pass" value=""
                                                        placeholder="New Password" />
                                                </div>
                                            </div>
                                            <input type="hidden" name="email" value="<%= email %>" />



                                            <!-- Admin Profile Upload -->
                                            <div class="form-group row mb-4">
                                                <label for="admin_profile"
                                                    class="col-sm-5 text-end control-label col-form-label">Confirm
                                                    Password:</label>
                                                <div class="col-sm-7">
                                                    <input type="text" name="confirm_pass" class="form-control"
                                                        placeholder="Confirm Password" />
                                                </div>
                                            </div>

                                            <!-- Update Button -->
                                            <div class="border-top pt-3">
                                                <button type="submit" class="btn btn-outline-danger w-100">
                                                    Update
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <footer class="footer text-center">
                            All Rights Reserved by Matrix-admin. Designed and Developed by
                            <a href="https://www.wrappixel.com">WrapPixel</a>.
                        </footer>
                    </div>
        </div>
        <%- include('../layout/ScriptLinks.ejs')-%>
    </body>

</html>